{
	"name": "datapod-for-react-typescript-json",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 3273 --open",
		"cp": "cd scripts/commands && tsx create-page.ts",
		"pd": "cd scripts/commands && tsx parse-data.ts",
		"gsr": "tsx backend/reports/generate-shift-report.ts",
		"api": "nodemon",
		"gh": "git log --pretty=format:\"%ad | %h | %s\" --date=format:\"%Y-%m-%d %H:%M:%S\"",
		"backup": "bash -c 'git archive --format=zip HEAD -o \"../BACKUP/datapod-for-react-typescript-json-$(date +%F-%H-%M-%S).zip\"'",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
		"ex": "cd dev/examples && bash ex.sh"
	},
	"nodemonConfig": {
		"watch": [
			"backend"
		],
		"ext": "ts, json",
		"exec": "tsx backend/api/index.ts"
	},
	"dependencies": {
		"axios": "^1.12.2",
		"cors": "^2.8.5",
		"dayjs": "^1.11.10",
		"dotenv": "^17.2.2",
		"easy-peasy": "^6.0.5",
		"express": "^5.1.0",
		"nodemon": "^3.1.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.3.0",
		"react-router-dom": "^6.18.0",
		"tsx": "^4.19.3",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react": "^4.0.3",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.45.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"sass": "^1.69.5",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.0.2",
		"vite": "^6.2.6"
	}
}